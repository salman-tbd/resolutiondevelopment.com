# Next.js Static Export - Netlify/Cloudflare Pages Headers Configuration
# This file is automatically copied to the /out folder during build

# Security headers for all pages
/*
  X-DNS-Prefetch-Control: on
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  Referrer-Policy: origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  X-XSS-Protection: 1; mode=block
  Content-Language: en-US
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://fonts.googleapis.com https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https:; frame-ancestors 'self'; base-uri 'self'; form-action 'self';

# Cache static assets (images, fonts)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Cache manifest and service worker
/manifest.json
  Cache-Control: public, max-age=86400

# Uncomment if you have a service worker
# /sw.js
#   Cache-Control: public, max-age=0, must-revalidate

# Font files
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff2

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff

