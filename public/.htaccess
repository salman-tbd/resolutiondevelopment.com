# Next.js Static Export - Apache/cPanel Configuration
# This file is automatically copied to the /out folder during build

# Enable HTTPS redirect (uncomment if you have SSL)
# <IfModule mod_rewrite.c>
#   RewriteEngine On
#   RewriteCond %{HTTPS} off
#   RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# </IfModule>

# Security Headers
<IfModule mod_headers.c>
  # DNS Prefetch Control
  Header set X-DNS-Prefetch-Control "on"
  
  # Prevent clickjacking
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Prevent MIME type sniffing
  Header set X-Content-Type-Options "nosniff"
  
  # Referrer Policy
  Header set Referrer-Policy "origin-when-cross-origin"
  
  # Permissions Policy (disable camera, microphone, geolocation)
  Header set Permissions-Policy "camera=(), microphone=(), geolocation=()"
  
  # HSTS - Force HTTPS (uncomment if you have SSL)
  # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  
  # XSS Protection
  Header set X-XSS-Protection "1; mode=block"
  
  # Content Language
  Header set Content-Language "en-US"
  
  # Content Security Policy
  Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://fonts.googleapis.com https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https:; frame-ancestors 'self'; base-uri 'self'; form-action 'self';"
</IfModule>

# Cache Control for Assets
<IfModule mod_headers.c>
  # Cache static assets for 1 year
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|avif|svg|ico|woff|woff2|ttf|eot|otf)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Cache CSS and JS for 1 year (Next.js includes hash in filename)
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Cache HTML for 1 hour (can be updated more frequently)
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "public, max-age=3600, must-revalidate"
  </FilesMatch>
</IfModule>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Charset
AddDefaultCharset UTF-8

# Enable MultiViews for clean URLs (if supported)
Options -MultiViews

# Rewrite rules for clean URLs
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Don't rewrite files or directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Rewrite everything else to index.html for Next.js routing
  # Note: This is for single-page apps. Next.js static export creates individual HTML files.
  # You may not need this if all routes are pre-rendered as HTML files.
</IfModule>

# Deny access to hidden files (except .well-known for Let's Encrypt)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_URI} "!(^|/)\.well-known/([^./]+./?)+$" [NC]
  RewriteCond %{SCRIPT_FILENAME} -d [OR]
  RewriteCond %{SCRIPT_FILENAME} -f
  RewriteRule "(^|/)\." - [F]
</IfModule>

# Error pages
# ErrorDocument 404 /404.html
# ErrorDocument 500 /500.html
